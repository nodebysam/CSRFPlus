{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "resolveJsonModule": true,
        "types": ["node", "vitest"],
        "skipLibCheck": true
    },
    "include": ["src", "tests", "types"]
}